# {{ ansible_managed }}
[Service.{{ openio_redis_namespace }}-redis-{{ openio_redis_serviceid }}]
command=/usr/bin/redis-server /etc/oio/sds/{{ openio_redis_namespace }}/redis-{{ openio_redis_serviceid }}/redis.conf --daemonize no
enabled=true
start_at_boot=true
on_die=respawn
group={{ openio_redis_namespace }},redis,{{ openio_redis_serviceid }}
uid=openio
gid=openio
limit.stack_size={{ openio_redis_stacktrace_size_limit }}
env.PATH=/usr/local/bin:/usr/bin:/usr/local/sbin:/usr/sbin
